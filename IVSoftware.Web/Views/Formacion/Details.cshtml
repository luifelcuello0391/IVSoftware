@model IVSoftware.Web.Models.Formacion

@{
    ViewData["Title"] = "Formación - Detalles";
}

<h5 class="text-primary titulo">Formación - Detalles</h5>
<hr />

<dl class="row">
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.NombreCurso)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.NombreCurso)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.Tema)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Tema)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.TipoCertificacion)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.TipoCertificacion)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.Entidad)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Entidad)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.FechaFinalizacion)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.FechaFinalizacion)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.NumeroHoras)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.NumeroHoras)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.ArchivoAdjunto)
    </dt>
    <dd class="col-sm-9">
        <a href="@Url.Action("DescargarArchivo", "Persona", new { file = Model.ArchivoAdjunto })">
            Descargar
        </a>
    </dd>
    <dt class="col-sm-3" hidden>
        @Html.DisplayNameFor(model => model.Persona)
    </dt>
    <dd class="col-sm-9" hidden>
        @Html.DisplayFor(model => model.Persona.Id)
    </dd>
</dl>

<div>
    <a asp-controller="Formacion" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-controller="Persona" asp-action="EditarPerfil" asp-route-userName="@Model.Persona.Email">Regresar</a>
</div>
