@model IVSoftware.Web.Models.Pregunta

@{
    ViewData["Title"] = "Pregunta - Agregar";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h5 class="text-primary titulo">Pregunta - Agregar</h5>
    <hr />

    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <input asp-for="Orden" class="form-control" />
                <span asp-validation-for="Orden" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="TipoPregunta" class="control-label"></label>
                </div>
                <select asp-for="TipoPregunta" class="form-control">
                    <option value=""></option>
                    <option value="1">Selección única</option>
                    <option value="2">Selección múltiple</option>
                    <option value="3">Pregunta abierta</option>
                </select>
                <span asp-validation-for="TipoPregunta" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="form-group">
                <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="Enunciado" class="control-label"></label>
                </div>
                <input asp-for="Enunciado" class="form-control" />
                <span asp-validation-for="Enunciado" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group" hidden>
        <label asp-for="EvaluacionId"></label>
        <input asp-for="EvaluacionId" class="form-control" value="@ViewBag.EvaluacionId"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>

</form>
    
<div>
    <a asp-controller="Evaluacion" asp-action="Details" asp-route-id="@ViewBag.EvaluacionId">Regresar</a>
</div>

