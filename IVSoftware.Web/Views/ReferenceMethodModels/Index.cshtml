@model IEnumerable<IVSoftware.Models.ReferenceMethodModel>

@{
    ViewData["Title"] = "Métodos de referencia";
}

<h1>Métodos de referencia</h1>

<p>
    <a asp-action="Create">Registrar método de referencia</a>
</p>
<table class="table">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.Raw("Incertidumbre")
            </th>
            <!--<th>
                @Html.DisplayNameFor(model => model.MeasurementUncertaintyLowerValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasurementUncertaintyUpperValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPercentage)
            </th>-->

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uncertainty)
            </td>
            <!--<td>
                @Html.DisplayFor(modelItem => item.MeasurementUncertaintyLowerValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasurementUncertaintyUpperValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPercentage)
            </td>-->
            <td style="white-space:nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" style="font-size:larger"></i></a>&nbsp;
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-stream" style="font-size:larger; color:green"></i></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-minus-circle" style="font-size:larger; color:red"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
