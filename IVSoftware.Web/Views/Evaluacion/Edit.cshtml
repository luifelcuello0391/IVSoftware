@model IVSoftware.Web.Models.Evaluacion

@{
    ViewData["Title"] = "Evaluación - Editar";
}

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <h5 class="text-primary titulo">Evaluación - Editar</h5>
    <hr />

    <div class="form-group">
        <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
            <label asp-for="Nombre" class="control-label"></label>
        </div>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Regresar</a>
</div>

