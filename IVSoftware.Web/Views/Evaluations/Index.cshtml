@model IEnumerable<Evaluation>

@{
    ViewData["Title"] = "Lista de evaluaciones";
}

<h5 class="text-primary titulo">Lista de evaluaciones</h5>
<div class="row">
    <div class="col"><a asp-action="Create" class="float-right btn btn-primary mb-3">Nueva Evaluación</a></div>
</div>

<table class="table" id="evaluationTable">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Periodicity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PeriodicityAmount)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Periodicity.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PeriodicityAmount)
                    </td>*@
                <td align="right" style="white-space:nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" style="font-size:larger"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-minus-circle" style="font-size:larger; color:red"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <link href="~/lib/datatables.net/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
                        $('#evaluationTable').DataTable({
                language: {
                    url: '/lib/datatables.net/Spanish.json'
                },
                columnDefs: [{
                    orderable: false,
                    targets: 2
                },]
            });
        });
    </script>
}