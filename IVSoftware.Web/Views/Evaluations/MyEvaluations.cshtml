@model IEnumerable<PersonEvaluation>

@{
    ViewData["Title"] = "Mis evaluaciones";
}

<h5 class="text-primary titulo">Mis evaluaciones</h5>

<table class="table">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Evaluation.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().AssignedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Score)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Evaluation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedDate)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.ResultJson))
                {
                    <span class="badge badge-pill badge-warning">No realizado</span>
                }
                else if (item.IsApproved.HasValue && item.IsApproved.Value)
                {
                    <span class="badge badge-success">Aprobado</span>
                }
                else if (item.IsApproved.HasValue)
                {
                    <span class="badge badge-pill badge-danger">No aprobado</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
                @if (item.Score.HasValue)
                {
                    <span>%</span>
                }
            </td>
            <td align="right" style="white-space:nowrap">
                @if (string.IsNullOrEmpty(item.ResultJson))
                {
                    @if (item.StartDate <= DateTime.Now && DateTime.Now < item.EndDate)
                    {
                        <a asp-action="Start" asp-route-id="@item.Id" title="Iniciar"><i class="fas fa-play" style="font-size:larger"></i></a>
                    }
                }
                else
                {
                    <a asp-action="Details" asp-route-id="@item.Id" title="Ver"><i class="fas fa-eye" style="font-size:larger"></i></a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>