@model EvaluationVM

@{
    ViewData["Title"] = "Mis evaluaciones";
}

<h5 class="text-primary titulo">Evaluación - @Model.Name</h5>
<br />
<br />

<form asp-action="Start">
    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div>
            <div class="row">
                <div class="col">
                    <p>
                        @Model.Questions.ElementAtOrDefault(i).Question
                    </p>

                    @for (int j = 0; j < @Model.Questions.ElementAtOrDefault(i).Answers.Count; j++)
                    {
                        <div class="row">
                            <div class="col">
                                <div class="form-check">
                                    <input class="form-check-input"
                                           type="checkbox"
                                           value="true"
                                           asp-for="Questions.ElementAtOrDefault(i).Answers.ElementAtOrDefault(j).IsSelected"
                                           disabled>
                                    <label class="form-check-label" asp-for="Questions.ElementAtOrDefault(i).Answers.ElementAtOrDefault(j).IsSelected">
                                        @Model.Questions.ElementAtOrDefault(i).Answers.ElementAtOrDefault(j).Answer
                                    </label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <hr />
        <br />
    }

    <br />
    <div class="row">
        <div class="col">
            <div class="form-group">
                <a asp-action="MyEvaluations" class="float-right btn btn-primary">Cancelar</a>
            </div>
        </div>
    </div>
</form>