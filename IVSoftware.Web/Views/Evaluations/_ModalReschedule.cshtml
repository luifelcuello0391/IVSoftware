@model PersonEvaluation

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Reprogramar evaluación</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <input type="hidden" asp-for="Id" id="oldId" name="oldId"/>
    <span asp-validation-for="Id" class="text-danger small"></span>
    <div class="form-group">
        <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
            <label asp-for="Date" style="color:white"></label>
        </div>
        <input asp-for="Date" id="newDate" name="newDate" class="form-control" />
        <span asp-validation-for="Date" class="text-danger small"></span>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" id="Reschedule">Reprogramar</button>
</div>

<script>
    $(document).ready(function () {
        $('#Reschedule').on("click", function () {
            let Id = $('#oldId').val();
            let Date = $('#newDate').val();

            $.ajax({
                url: '@Url.Action("Reschedule", "Evaluations")',
                method: 'POST',
                data: {
                    Id,
                    Date
                },
                success: function (data) {
                    //if (!data.startsWith("<div"))
                    $('#assign-modal').modal('show');
                    if (data.lastIndexOf("<div", 6) != -1) {
                        $('.modal-content').html(data);
                        $('#assign-modal').modal('show');
                    }
                    else {
                        location.reload();
                    }
                },
                error: function (data) {
                    console.log(data);
                    alert("Ocurrió un error, intente más tarde por favor");
                }
            });
        })
    });

</script>