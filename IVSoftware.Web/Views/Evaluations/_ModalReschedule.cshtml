@model PersonEvaluation

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Reprogramar evaluación</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <input type="hidden" asp-for="Id" id="oldId" name="oldId"/>
    <div class="row">
        <div class="col">
            <span asp-validation-for="Id" class="text-danger small"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="StartDate" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="EndDate" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" id="cancel" data-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" id="Reschedule">Reprogramar</button>
</div>

<script>
    $(document).ready(function () {
        $('#Reschedule').on("click", function () {
            $(this).prop('disabled', true);
            $('#cancel').prop('disabled', true);
            let Id = $('#oldId').val();
            let StartDate = $('#StartDate').val();
            let EndDate = $('#EndDate').val();

            $.ajax({
                url: '@Url.Action("Reschedule", "Evaluations")',
                method: 'POST',
                data: {
                    Id,
                    StartDate,
                    EndDate
                },
                success: function (data) {
                    //if (!data.startsWith("<div"))
                    $('#assign-modal').modal('show');
                    if (data.lastIndexOf("<div", 6) != -1) {
                        $('.modal-content').html(data);
                        $('#assign-modal').modal('show');
                        $('#Reschedule').prop('disabled', false);
                        $('#cancel').prop('disabled', false);
                    }
                    else {
                        location.reload();
                    }
                },
                error: function (data) {
                    console.log(data);
                    alert("Ocurrió un error, intente más tarde por favor");
                }
            });
        })
    });

</script>