@model QuestionsEvaluationVM

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Asignación de preguntas</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <input type="hidden" asp-for="Id" />
    <span asp-validation-for="QuestionsEvaluation" class="text-danger small"></span>
    <table class="table w-100" id="questionTable">
        <thead style="background-color:yellowgreen; color:white">
            <tr>
                <th></th>
                <th class="d-none"></th>
                <th>
                    @Html.DisplayNameFor(model => model.QuestionsEvaluation.FirstOrDefault().Question.Question)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.QuestionsEvaluation)
            {
                <tr class="@((item.IsSelected) ? "assigned" : "")">
                    <td></td>
                    <td class="d-none">@Html.DisplayFor(modelItem => item.QuestionId)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Question.Question)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    <button type="button" class="btn btn-primary" id="assign">Asignar</button>
</div>

<script>
    $(document).ready(function () {
        const questionTable = $('#questionTable').DataTable({
            columnDefs: [{
                orderable: false,
                className: 'select-checkbox',
                targets: 0
            }],
            select: {
                style: 'multi',
                selector: 'td:first-child'
            },
            language: {
                url: '/lib/datatables.net/Spanish.json'
            },
            order: [[1, 'asc']]
        });

        questionTable.select().init();
        questionTable.rows('.assigned').select();

        $('#assign').on("click", function () {
            let questions = questionTable.rows({ selected: true }).data();

            let Id = $('#Id').val();
            let questionsEvaluation = new Array();
            for (let i = 0; i < questions.length; i++) {
                questionsEvaluation.push({ EvaluationId: Id, QuestionId: questions[i][1], IsSelected: true });
            }

            $.ajax({
                url: '@Url.Action("AssignQuestions", "Evaluations")',
                method: 'POST',
                data: {
                    Id: Id,
                    QuestionsEvaluation: questionsEvaluation
                },
                success: function (data) {
                    //if (!data.startsWith("<div"))
                    $('#assign-modal').modal('show');
                    if (data.lastIndexOf("<div", 6) != -1) {
                        $('.modal-content').html(data);
                        $('#assign-modal').modal('show');
                    }
                    else {
                        location.reload();
                    }
                },
                error: function (data) {
                    console.log(data);
                    alert("Ocurrió un error, intente más tarde por favor");
                }
            });
        })
    });

</script>