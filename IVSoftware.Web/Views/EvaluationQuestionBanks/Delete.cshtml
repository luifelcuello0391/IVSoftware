@model EvaluationQuestionBank

@{
    ViewData["Title"] = "Eliminar";
}

<div>
    <h5 class="text-primary titulo"><strong>¿Está seguro de que quiere eliminar este registro?</strong></h5>
</div>
<hr />
<div>
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="Question" class="control-label" style="color:white"></label>
                </div>
                <textarea asp-for="Question" class="form-control" rows="3" readonly="readonly"></textarea>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary">Cancelar</a>
        </div>
    </form>
</div>
