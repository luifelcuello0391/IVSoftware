@model IEnumerable<IVSoftware.Data.Models.AirResourceMonitoringDeviceMaintenance>

@{
    ViewData["Title"] = "Mantenimiento y calibración de equipos recurso aire";
}

<h2>Mantenimiento y calibración de equipos recurso aire</h2>

<div>
    <p style="float:left">
        <a asp-action="Create">Agregar registro</a>
    </p>

    <div style="float:right">
        <table>
            <tr>
                <td>
                    <select class="form-control" id="cbx_filter">
                        @if (ViewBag.filter == "All")
                        {
                            <option value="All" selected>Mostrar Todos</option>
                        }
                        else
                        {
                            <option value="All">Mostrar Todos</option>
                        }

                        @if (ViewBag.filter == "R")
                        {
                            <option value="R" selected>Mostrar mantenimientos correctivos (reparación)</option>
                        }
                        else
                        {
                            <option value="R">Mostrar mantenimientos correctivos (reparación)</option>
                        }

                        @if (ViewBag.filter == "P")
                        {
                            <option value="P" selected>Mostrar mantenimientos preventivos</option>
                        }
                        else
                        {
                            <option value="P">Mostrar mantenimientos preventivos</option>
                        }

                        @if (ViewBag.filter == "C")
                        {
                            <option value="C" selected>Mostrar calibraciones</option>
                        }
                        else
                        {
                            <option value="C">Mostrar calibraciones</option>
                        }
                    </select>
                </td>

                <td>
                    <input type="button" class="btn btn-primary" style="background-color:yellowgreen;color:white;margin-left:10px" value="Filtrar listado" onclick="onFilter()" />
                </td>
            </tr>
        </table>

    </div>
</div>

<table class="table table-striped table-sm" style="display:block; overflow:auto">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th>
                @Html.Raw("Fecha")
            </th>

            <th>
                @Html.Raw("Tipo")
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Equipment)
            </th>

            <th style="white-space:nowrap">
                @Html.Raw("Serie del equipo")
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Equipment.Laboratory)
            </th>

            <th style="white-space:nowrap">
                @Html.Raw("Identificación del proveedor")
            </th>

            <th style="white-space:nowrap">
                @Html.Raw("Nombre del proveedor")
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.SparePartsChanged)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.NextMaintenanceDate)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.Responsable)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td style="white-space:nowrap">
                @Html.DisplayFor(modelItem => item.MaintenanceDate)
            </td>

            <td style="white-space:nowrap">
                @Html.DisplayFor(modelItem => item.TypeOfMaintenance)
            </td>

            <td style="white-space:nowrap">
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            @if (item.Equipment != null && item.Equipment.Name != null && !string.IsNullOrEmpty(item.Equipment.Name.Replace(" ", string.Empty)))
            {
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Equipment.Name)
                </td>
            }
            else
            {
                <td style="white-space:nowrap">
                    @Html.Raw("No especificado")
                </td>
            }

            @if (item.Equipment != null && item.Equipment.Serie != null && !string.IsNullOrEmpty(item.Equipment.Serie.Replace(" ", string.Empty)))
            {
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Equipment.Serie)
                </td>
            }
            else
            {
                <td style="white-space:nowrap">
                    @Html.Raw("No especificada")
                </td>
            }

            @if (item.Equipment != null && item.Equipment.Laboratory != null && item.Equipment.Laboratory.Name != null && !string.IsNullOrEmpty(item.Equipment.Laboratory.Name.Replace(" ", string.Empty)))
            {
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Equipment.Laboratory.Name)
                </td>
            }
            else
            {
                <td style="white-space:nowrap">
                    @Html.Raw("No asignado")
                </td>
            }

            <td>
                @Html.DisplayFor(modelItem => item.ProviderIdentificaton)
            </td>

            <td style="white-space:nowrap">
                @Html.DisplayFor(modelItem => item.ProviderName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.SparePartsChanged)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NextMaintenanceDate)
            </td>

            @if (item.Responsable != null && item.Responsable.FullName != null && !string.IsNullOrEmpty(item.Responsable.FullName.Replace(" ", string.Empty)))
            {
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Responsable.FullName)
                </td>
            }
            else
            {
                <td style="white-space:nowrap">
                    @Html.Raw("No especificado")
                </td>
            }

            <td style="white-space:nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" style="font-size:larger"></i></a>&nbsp;
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-stream" style="font-size:larger; color:green"></i></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-minus-circle" style="font-size:larger; color:red"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>

<script>
    function onFilter() {
        var filter_data = document.getElementById("cbx_filter").value;
        location.href = '@Url.Action("Index", "AirResourceMonitoringDeviceMaintenances")?filter=' + filter_data;
    }
</script>