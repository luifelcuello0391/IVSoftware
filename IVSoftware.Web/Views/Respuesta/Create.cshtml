@model IVSoftware.Web.Models.Respuesta

@{
    ViewData["Title"] = "Respuesta - Agregar";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h5 class="text-primary titulo">Respuesta - Agregar</h5>
    <hr />

    <div class="row">
        <div class="col-sm-2">
            <div class="form-group">
                <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <input asp-for="Orden" class="form-control" />
                <span asp-validation-for="Orden" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="form-group">
                <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="RespuestaCorrecta" class="control-label"></label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RespuestaCorrecta" />
                    </label>
                </div>
            </div>
        </div>
        <div class="col-sm-7">
            <div class="form-group">
                <div style="background-color:yellowgreen;color:white;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="Texto" class="control-label"></label>
                </div>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group" hidden>
        <label asp-for="PreguntaId" class="control-label"></label>
        <input asp-for="PreguntaId" class="form-control" value="@ViewBag.PreguntaId"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-controller="Pregunta" asp-action="Details" asp-route-id="@ViewBag.PreguntaId">Regresar</a>
</div>

