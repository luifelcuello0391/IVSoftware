@model IEnumerable<IVSoftware.Data.Models.EquipmentPurchaseRequest>

@{
    ViewData["Title"] = "Solicitudes de compra de equipos";
}

<h1>Solicitudes de compra de equipos</h1>

<div>
    <p style="float:left">
        <a asp-action="Create">Agregar nueva solicitud</a>
    </p>

    <div style="float:right">
        <table>
            <tr>
                <td>
                    <select class="form-control" id="cbx_filter">
                        @if (ViewBag.filter == "All")
                        {
                            <option value="All" selected>Mostrar Todas</option>
                        }
                        else
                        {
                            <option value="All">Mostrar Todas</option>
                        }

                        @if (ViewBag.filter == "1")
                        {
                            <option value="M" selected>Mostrar nuevas solicitudes</option>
                        }
                        else
                        {
                            <option value="M">Mostrar nuevas solicitudes</option>
                        }

                        @if (ViewBag.filter == "2")
                        {
                            <option value="C" selected>Mostrar solicitudes aprobadas</option>
                        }
                        else
                        {
                            <option value="2">Mostrar solicitudes aprobadas</option>
                        }

                        @if (ViewBag.filter == "3")
                        {
                            <option value="C" selected>Mostrar solicitudes rechazadas</option>
                        }
                        else
                        {
                            <option value="2">Mostrar solicitudes rechazadas</option>
                        }
                    </select>
                </td>

                <td>
                    <input type="button" class="btn btn-primary" style="background-color:yellowgreen;color:white;margin-left:10px" value="Filtrar listado" onclick="onFilter()" />
                </td>
            </tr>
        </table>

    </div>
</div>

<table class="table table-striped table-sm" style="display:block; overflow:auto">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.Location)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.EquipmentName)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.ResponsibleAnalyst)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.RequestStatus)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.RequestStatusDate)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.StatusChangePerson)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.RequestDate)
                </td>

                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>

                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.EquipmentName)
                </td>

                @if (item.ResponsibleAnalyst != null && item.ResponsibleAnalyst.FullName != null && !string.IsNullOrEmpty(item.ResponsibleAnalyst.FullName.Replace(" ", string.Empty)))
                {
                    <td style="white-space:nowrap">
                        @Html.DisplayFor(modelItem => item.ResponsibleAnalyst.FullName)
                    </td>
                }
                else
                {
                    <td style="white-space:nowrap">
                        @Html.Raw("No especificado")
                    </td>
                }

                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.RequestStatusName)
                </td>

                @if (item.RequestStatus == 2 || item.RequestStatus == 3)
                {
                    <td style="white-space:nowrap">
                        @Html.DisplayFor(modelItem => item.RequestStatusDate)
                    </td>
                }
                else
                {
                    <td style="white-space:nowrap">
                        @Html.Raw("No aplica")
                    </td>
                }

                @if (item.RequestStatus == 2 || item.RequestStatus == 3)
                {
                    if (item.StatusChangePerson != null && item.StatusChangePerson.FullName != null && !string.IsNullOrEmpty(item.StatusChangePerson.FullName.Replace(" ", string.Empty)))
                    {
                        <td style="white-space:nowrap">
                            @Html.DisplayFor(modelItem => item.StatusChangePerson.FullName)
                        </td>
                    }
                    else
                    {
                        <td style="white-space:nowrap">
                            @Html.Raw("No hay datos")
                        </td>
                    }
                }
                else
                {
                    <td style="white-space:nowrap">
                        @Html.Raw("No hay datos")
                    </td>
                }

                <td style="white-space:nowrap">
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-stream" style="font-size:larger; color:green"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>

<script>
    function onFilter() {
        var filter_data = document.getElementById("cbx_filter").value;
        location.href = '@Url.Action("Index", "EquipmentPurchaseRequests")?filter=' + filter_data;
    }
</script>