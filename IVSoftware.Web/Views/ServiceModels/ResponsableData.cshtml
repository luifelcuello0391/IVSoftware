@model Person

@if (Model != null)
{
    <h5 style="color:yellowgreen; margin-top:5px">Información del responsable</h5>
    <hr />
<div class="row form-group">
    <input id="txt_person_id" asp-for="Id" hidden/>

    <div class="row" style="margin-left:10px">
        <div class="form-group col-md-3" style="white-space:nowrap">
            <div><b>Tipo de ID</b></div>
            <div>@Html.DisplayFor(model => model.IdentificationType.Name)</div>
        </div>

        <div class="form-group col-md-3">
            <div><b>@Html.DisplayNameFor(model => model.IdentificationNumber)</b></div>
            <div>@Html.DisplayFor(model => model.IdentificationNumber)</div>
        </div>

        <div class="form-group col-md-6">
            <div><b>@Html.DisplayNameFor(model => model.FullName)</b></div>
            <div>@Html.DisplayFor(model => model.FullName)</div>
        </div>
    </div>
</div>
}
else
{
    <label>No hay información del responsable</label>
}