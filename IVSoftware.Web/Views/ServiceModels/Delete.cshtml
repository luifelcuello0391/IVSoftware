@model IVSoftware.Data.Models.ServiceModel

@{
    ViewData["Title"] = "Eliminar servicio";
}

<h1>Eliminar</h1>

<h3>¿Desea eliminar el servicio?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.MatrixGroup)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.MatrixGroupName)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ServiceType)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ServiceTypeName)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ReportDeliveryTime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ReportDeliveryTime)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.WeeklyAssignmentQuantity)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.WeeklyAssignmentQuantity)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ReferenceMethod)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ReferenceMethodName)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.Raw("Rango de trabajo")
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.WorkingRange)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.UnitValue)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            $ @Html.DisplayFor(model => model.UnitValue)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.AcredditedByIdeam)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Model.GetYesNo(Model.AcredditedByIdeam)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.AuthorizedByINS)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Model.GetYesNo(Model.AuthorizedByINS)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Valid) @DateTime.Now.Year
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Model.GetYesNo(Model.Valid)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            ¿@Html.DisplayNameFor(model => model.AvailableForClients)?
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Model.GetYesNo(Model.AvailableForClients)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <h5 style="color:yellowgreen">Información del responsable</h5>
    <hr />
    <dl class="row">
        @if (Model.Responsable != null)
        {
            <dd>
                <div class="row" style="margin-left:10px">
                    <div class="form-group col-md-3" style="white-space:nowrap">
                        <div><b>Tipo de ID</b></div>
                        <div>@Html.DisplayFor(model => model.Responsable.IdentificationType.Name)</div>
                    </div>

                    <div class="form-group col-md-3">
                        <div><b>@Html.DisplayNameFor(model => model.Responsable.IdentificationNumber)</b></div>
                        <div>@Html.DisplayFor(model => model.Responsable.IdentificationNumber)</div>
                    </div>

                    <div class="form-group col-md-6">
                        <div><b>@Html.DisplayNameFor(model => model.Responsable.FullName)</b></div>
                        <div>@Html.DisplayFor(model => model.Responsable.FullName)</div>
                    </div>
                </div>
            </dd>
        }
        else
        {
            <dd class="col-sm-10" style="margin-left:10px">
                <label>No se ha asignado un responsable</label>
            </dd>
        }
    </dl>

    <h5 style="color:yellowgreen">Información adicional</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.RegisterStatus)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.RegisterStatusName)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.CreationDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.CreationDatetime)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ModificationDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ModificationDatetime)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
