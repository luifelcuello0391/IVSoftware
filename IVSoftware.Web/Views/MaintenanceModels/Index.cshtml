@model IEnumerable<IVSoftware.Data.Models.MaintenanceModel>

@{
    ViewData["Title"] = "Mantenimiento y calibración de equipos de laboratorio";
}

<h2>Mantenimiento y calibración de equipos de laboratorio</h2>

<p>
    <a asp-action="Create">Agregar registro</a>
</p>
<table class="table table-striped table-sm" style="display:block; overflow:auto">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th>
                @Html.Raw("Fecha")
            </th>

            <th>
                @Html.Raw("Tipo")
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Equip)
            </th>

            <th style="white-space:nowrap">
                @Html.Raw("Serie del equipo")
            </th>

            <th style="white-space:nowrap">
                @Html.Raw("Contratista de mantenimiento")
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.Diagnostic)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.WorkExecuted)
            </th>

            <th style="white-space:nowrap">
                @Html.DisplayNameFor(model => model.NextCalibrationDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Responsable)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td style="white-space:nowrap">
                @Html.DisplayFor(modelItem => item.MaintenanceDate)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TypeOfMaintenance)
            </td>

            @if (item.Equip != null && item.Equip.Name != null && !string.IsNullOrEmpty(item.Equip.Name.Replace(" ", string.Empty)))
            {
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Equip.Name)
                </td>
            }
            else
            {
                <td style="white-space:nowrap">
                    @Html.Raw("No especificada")
                </td>
            }

            @if (item.Equip != null && item.Equip.Serie != null && !string.IsNullOrEmpty(item.Equip.Serie.Replace(" ", string.Empty)))
            {
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Equip.Serie)
                </td>
            }
            else
            {
                <td style="white-space:nowrap">
                    @Html.Raw("No especificada")
                </td>
            }

            <td style="white-space:nowrap">
                @if (item.ServiceProvider != null)
                {
                    @Html.DisplayFor(modelItem => item.ServiceProvider.Name)
                }
                else
                {
                    @Html.Raw("No especificado")
                }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Diagnostic)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.WorkExecuted)
            </td>

            <td>
                @if (item.TypeOfMaintenanceId.Equals("C"))
                {
                    @Html.DisplayFor(modelItem => item.NextCalibrationDate)
                }
                else
                {
                    @Html.Raw("No aplica")
                }
            </td>

            <td style="white-space:nowrap">
                @if (item.Responsable != null)
                {
                    @Html.DisplayFor(modelItem => item.Responsable.FullName)
                }
                else
                {
                    @Html.Raw("No especificado")
                }
            </td>

            <td style="white-space:nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" style="font-size:larger"></i></a>&nbsp;
                <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-stream" style="font-size:larger; color:green"></i></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-minus-circle" style="font-size:larger; color:red"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
