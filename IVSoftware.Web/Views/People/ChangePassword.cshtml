@model ChangePasswordVM

@{
    ViewData["Title"] = "Cambiar contraseña";
}

<h5 class="text-primary titulo">Cambiar contraseña</h5>
<hr />
<div class="row">
    <div class="col-md-8 col-sm-12">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="Password" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="NewPassword" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="CPassword" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="CPassword" type="password" class="form-control" />
                <span asp-validation-for="CPassword" class="text-danger small"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cambiar" class="btn btn-primary" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}