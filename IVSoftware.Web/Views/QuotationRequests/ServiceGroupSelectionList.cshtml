@model IEnumerable<ServiceGroupModel>


<div class="modal-header">
    <h5 class="modal-title" style="float:left; color:yellowgreen">Seleccione un grupo de servicio</h5>
    <button id="btn_hide_client_modal" type="button" data-dismiss="modal" class="close" style="color:red; margin-right:5px">
        X
    </button>
</div>


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped table-sm" style="display:block; overflow:auto">
        <thead style="background-color:yellowgreen; color:white">
            <tr>
                <th></th>

                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>

                <th style="white-space:nowrap">
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    Servicios incluídos
                </th>

                <th style="white-space:nowrap">
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th style="white-space:nowrap">
                    @Html.DisplayNameFor(model => model.ReportDeliveryTime)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="white-space:nowrap">
                    <button class="btn btn-primary" onclick="selectServiceGroup(@item.Id)">Seleccionar</button>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                
                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ServicesCount)
                </td>

                <td style="white-space:nowrap">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReportDeliveryTime)
                </td>

            </tr>
            }
        </tbody>
    </table>
    }
else
{
    // No items
    <div><label>No hay grupos de servicios registrados</label></div>
}

