@model IEnumerable<NotificationSetting>

@{
    ViewData["Title"] = "Notificación";
}

<h5 class="text-primary titulo">Configuración de Notificaciones</h5>

@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col"><a asp-action="Create" class="float-right btn btn-primary mb-3">Nueva Configuración</a></div>
    </div>
}
else
{
    <br />
}

<table class="table">
    <thead style="background-color:yellowgreen; color:white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td align="right" style="white-space:nowrap">
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit" style="font-size:larger"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-minus-circle" style="font-size:larger; color:red"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
