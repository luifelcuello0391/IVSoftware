@model IVSoftware.Data.Models.ClientModel

@{
    ViewData["Title"] = "Detalle del cliente";
}

<h1>Detalle</h1>

<div>
    <h4 style="color:yellowgreen">Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.PersonType)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (@Model.PersonType == 1)
            {
                @Html.Raw("Persona natural")
            }
            else
            {
                @Html.Raw("Persona jurídica")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.DocumentType)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.DocumentTypeName)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Identification)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Identification)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.Department != null)
            {
                @Html.DisplayFor(model => model.Department.Name)
            }
            else
            {
                @Html.Raw("No especificado")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.City != null)
            {
                @Html.DisplayFor(model => model.City.Name)
            }
            else
            {
                @Html.Raw("No especificado")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.Extension != null && !string.IsNullOrEmpty(Model.Extension.Replace(" ", string.Empty)))
            {
                @Html.Raw(string.Format("{0} Ext. {1}", Model.PhoneNumber, Model.Extension))
            }
            else
            {
                @Html.DisplayFor(model => model.PhoneNumber)
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.CellPhone)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.CellPhone != null && string.IsNullOrEmpty(Model.CellPhone.Replace(" ", string.Empty)))
            {
                @Html.DisplayFor(model => model.CellPhone)
            }
            else
            {
                @Html.Raw("No hay datos")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ContactName)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ContactName)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.IsRegular)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.IsRegularText)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.LastServiceExecutionDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.LastServiceExecutionDatetime)
        </dd>
    </dl>

    <h5 style="color:yellowgreen">Contactos</h5>
    <hr />

    @if (Model.Contacts != null && Model.Contacts.Count > 0)
    {
        <table class="table">
            <thead style="background-color:yellowgreen; color:white">
                <tr>
                    <th style="white-space:nowrap">
                        @Html.Raw("Tipo de identificación")
                    </th>

                    <th>
                        @Html.Raw("Identificación")
                    </th>

                    <th style="white-space:nowrap">
                        @Html.Raw("Nombres y apellidos")
                    </th>

                    <th>
                        @Html.Raw("Departamento")
                    </th>

                    <th>
                        @Html.Raw("Ciudad")
                    </th>

                    <th>
                        @Html.Raw("Dirección")
                    </th>

                    <th style="white-space:nowrap">
                        @Html.Raw("Teléfono fijo")
                    </th>

                    <th>
                        @Html.Raw("Celular")
                    </th>

                    <th style="white-space:nowrap">
                        @Html.Raw("Área de trabajo")
                    </th>

                    <th>
                        @Html.Raw("Cargo")
                    </th>

                    <th style="white-space:nowrap">
                        @Html.Raw("Correo (entrega de resultados)")
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Contacts != null && Model.Contacts.Count > 0)
                {
                    @foreach (var item in Model.Contacts)
                    {
                        <tr>
                            <td style="white-space:nowrap">
                                @if (item.DocumentType != null)
                                {
                                    @Html.DisplayFor(modelItem => item.DocumentType.Name)
                                }
                                else
                                {
                                    @Html.Raw("No asignado");
                                }

                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.Identification)
                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td style="white-space:nowrap">
                                @if (item.AddressDepartment != null)
                                {
                                    @Html.DisplayFor(modelItem => item.AddressDepartment.Name)
                                }
                                else
                                {
                                    @Html.Raw("No asignado");
                                }
                            </td>

                            <td style="white-space:nowrap">
                                @if (item.City != null)
                                {
                                    @Html.DisplayFor(modelItem => item.City.Name)
                                }
                                else
                                {
                                    @Html.Raw("No asignada");
                                }
                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>

                            <td style="white-space:nowrap">
                                @if (item.Extension != null && !string.IsNullOrEmpty(item.Extension.Replace(" ", string.Empty)))
                                {
                                    @Html.Raw(string.Format("{0} Ext. {1}", item.PhoneNumber, item.Extension))
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                }
                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.CellPhone)
                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>

                            <td style="white-space:nowrap">
                                @Html.DisplayFor(modelItem => item.ReportDeliveryEmail)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <h6>No hay contactos asignados</h6>
        <br />
    }

    <h5 style="color:yellowgreen">Información adicional</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.RegisterStatus)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.RegisterStatusName)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.CreationDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.CreationDatetime)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ModificationDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ModificationDatetime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
