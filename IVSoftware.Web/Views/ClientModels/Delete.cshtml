@model IVSoftware.Models.ClientModel

@{
    ViewData["Title"] = "Eliminar cliente";
}

<h1>Eliminar</h1>

<h3>¿Desea eliminar el cliente?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.PersonType)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (@Model.PersonType == 1)
            {
                @Html.Raw("Persona natural")
            }
            else
            {
                @Html.Raw("Persona jurídica")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.DocumentType)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.DocumentTypeName)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Identification)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Identification)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.Department != null)
            {
                @Html.DisplayFor(model => model.Department.Nombre)
            }
            else
            {
                @Html.Raw("No especificado")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.City != null)
            {
                @Html.DisplayFor(model => model.City.Nombre)
            }
            else
            {
                @Html.Raw("No especificado")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.Extension != null && !string.IsNullOrEmpty(Model.Extension.Replace(" ", string.Empty)))
            {
                @Html.Raw(string.Format("{0} Ext. {1}", Model.PhoneNumber, Model.Extension))
            }
            else
            {
                @Html.DisplayFor(model => model.PhoneNumber)
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.CellPhone)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @if (Model.CellPhone != null && string.IsNullOrEmpty(Model.CellPhone.Replace(" ", string.Empty)))
            {
                @Html.DisplayFor(model => model.CellPhone)
            }
            else
            {
                @Html.Raw("No hay datos")
            }
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ContactName)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ContactName)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.IsRegular)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.IsRegularText)
        </dd>

        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.LastServiceExecutionDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.LastServiceExecutionDatetime)
        </dd>
    </dl>

    <h5 style="color:yellowgreen">Información adicional</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.RegisterStatus)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.RegisterStatusName)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.CreationDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.CreationDatetime)
        </dd>
        <dt class="col-sm-2" style="white-space:nowrap">
            @Html.DisplayNameFor(model => model.ModificationDatetime)
        </dt>
        <dd class="col-sm-10" style="margin-left:5px">
            @Html.DisplayFor(model => model.ModificationDatetime)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
