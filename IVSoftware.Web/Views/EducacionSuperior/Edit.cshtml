@model IVSoftware.Web.Models.EducacionSuperior

@{
    ViewData["Title"] = "Educación superior - Editar";
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h5 class="text-primary titulo">Educación superior - Editar</h5>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.NombreCompleto):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.NumeroIdentificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.NumeroIdentificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Persona.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Persona.Email)
        </dd>
    </dl>

    <div class="row" style="margin-top:20px">
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="NombreInstitucion" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="NombreInstitucion" class="form-control" />
                <span asp-validation-for="NombreInstitucion" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="SemestresAprobados" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="SemestresAprobados" class="form-control" />
                <span asp-validation-for="SemestresAprobados" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="EsGraduado" class="control-label" style="color:white"></label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="EsGraduado" />
                    </label>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="FechaGrado" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="FechaGrado" class="form-control" type="date" />
                <span asp-validation-for="FechaGrado" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="NombreEstudios" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="NombreEstudios" class="form-control" />
                <span asp-validation-for="NombreEstudios" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="NumeroTarjetaProfesional" class="control-label" style="color:white"></label>
                </div>
                <input asp-for="NumeroTarjetaProfesional" class="form-control" />
                <span asp-validation-for="NumeroTarjetaProfesional" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <div style="background-color:yellowgreen;padding-top:5px;padding-left:5px;padding-bottom:2px">
                    <label asp-for="ModalidadAcademicaId" class="control-label" style="color:white"></label>
                </div>
                <select asp-for="ModalidadAcademicaId" class="form-control" asp-items="ViewBag.ModalidadAcademicaId"></select>
                <span asp-validation-for="ModalidadAcademicaId" class="text-danger"></span>
            </div>
        </div>
        <div class="col"></div>
    </div>
    <hr />
    <h6 class="text-success titulo">Archivo adjunto</h6>
    <div class="row">
        <div class="col">
            <input type="file" name="file" />
        </div>
        <div class="col">
            <a href="@Url.Action("DescargarArchivo", "Persona", new { file = Model.ArchivoAdjunto })">
                Descargar archivo actual
            </a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />
    <div class="form-group" hidden>
        <label asp-for="PersonaId" class="control-label"></label>
        <select asp-for="PersonaId" class="form-control" asp-items="ViewBag.PersonaId"></select>
        <span asp-validation-for="PersonaId" class="text-danger"></span>
        <input asp-for="ArchivoAdjunto" class="form-control" />
    </div>
</form>
    
<div>
    <a asp-controller="Persona" asp-action="EditarPerfil" asp-route-userName="@Model.Persona.Email">Regresar</a>
</div>