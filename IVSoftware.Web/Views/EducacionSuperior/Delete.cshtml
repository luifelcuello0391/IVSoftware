@model IVSoftware.Web.Models.EducacionSuperior

@{
    ViewData["Title"] = "Educación superior - Eliminar";
}

<h5 class="text-primary titulo">Educación superior - Detalles</h5>
<hr />

<dl class="row">
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.NombreInstitucion)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.NombreInstitucion)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.SemestresAprobados)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.SemestresAprobados)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.EsGraduado)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.EsGraduado)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.FechaGrado)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.FechaGrado)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.NombreEstudios)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.NombreEstudios)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.NumeroTarjetaProfesional)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.NumeroTarjetaProfesional)
    </dd>
    <dt class="col-sm-3">
        @Html.DisplayNameFor(model => model.ModalidadAcademica)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.ModalidadAcademica.Nombre)
    </dd>
    <dt class="col-sm-3" hidden>
        @Html.DisplayNameFor(model => model.Persona)
    </dt>
    <dd class="col-sm-9" hidden>
        @Html.DisplayFor(model => model.Persona.Id)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> 
</form>

<div style="margin-top:20px">
    <a asp-controller="Persona" asp-action="EditarPerfil" asp-route-userName="@Model.Persona.Email">Regresar</a>
</div>